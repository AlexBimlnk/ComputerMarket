@model Market.Logic.Models.Product;

<div class="form-floating row">
    <div class="col-3">
        <img src="@(Model.Item.URL ?? "link")"
        width="200" height="200"  
        alt="item_image" />
    </div>
    <div class="col-9">
        <div class="row">
            <h3>@Model.Item.Type.Name @Model.Item.Name</h3>
        </div>
        <div class="row">
            <h5><i>@Model.Provider.Name</i></h5>
        </div>
        <br />
        <div class="row">
            <h3>@string.Format("{0:C}", Model.FinalCost)</h3>
        </div>
        <div class="row">
            <a href="~/products/product?itemId=@Model.Item.Key.Value&&providerId=@Model.Provider.Key.Value">Подробнее</a>
        </div>
    </div>
    
</div>

<hr />