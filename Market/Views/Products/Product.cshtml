@model Market.Logic.Models.Product
@{
    ViewData["Title"] =  Model.Item.Name;
}

<h1>@Model.Item.Name</h1>
<hr />
<div class="row">
    <div class="form-group">
        <h2>@Model.FinalCost</h2>
        <h3>@Model.Provider.Name</h3>
    </div>
    <div class="form-group">
        @{
            foreach(var property in Model.Item.Properties)
            {
                <div class="form-group">
                    <h2>@property.Name</h2><h2> - </h2><h2>@property.Value</h2>
                </div>
            }
        }
    </div>
</div>