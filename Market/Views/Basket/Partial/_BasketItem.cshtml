@model Market.Logic.Models.PurchasableEntity

<div class="row">
	<div class="col-md-1">
		<label class="pdsa-checkbox-group btn">
			<span class="glyphicon glyphicon-unchecked"></span>
			@Html.CheckBoxFor(m => m.Selected, new { Value = @Model.Product.Item.Key.Value.ToString() + '_' + Model.Product.Provider.Key.Value.ToString() })

		</label>
	</div>
	<div class="col-md-3">
		<a href="~/products/product?itemId=@Model.Product.Item.Key.Value&&providerId=@Model.Product.Provider.Key.Value" class="link-dark text-dark"><h3>@Model.Product.Item.Name</h3></a>
	</div>
	<div class="col-md-3">
		<div class="row">
			<div class="col-md-2">
				<button class="btn btn-light" onclick="location.href='/basket/add?itemId=@Model.Product.Item.Key.Value&&providerId=@Model.Product.Provider.Key.Value'" type="button">
					<h4>+</h4>
				</button>
			</div>
			<div class="col-md-1">
				<h5>@Model.Quantity</h5>
			</div>
			<div class="col-md-2">
				<button class="btn btn-light" onclick="location.href='/basket/remove?itemId=@Model.Product.Item.Key.Value&&providerId=@Model.Product.Provider.Key.Value'" type="button">
					<h4>-</h4>
				</button>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<h3>@string.Format("{0:C}", Model.Quantity*Model.Product.FinalCost)</h3>
	</div>
	<div class="col-md-2">
		<button class="btn btn-danger" onclick="location.href='basket/delete?itemId=@Model.Product.Item.Key.Value&&providerId=@Model.Product.Provider.Key.Value'" type="button">
			Удалить
		</button>
	</div>
</div>
<hr />
<br />