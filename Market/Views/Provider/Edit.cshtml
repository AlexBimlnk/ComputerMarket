@model Market.Models.ManageProviderViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Provider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Providers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" readonly />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="INN" class="control-label"></label>
                <input asp-for="INN" class="form-control" readonly />
                <span asp-validation-for="INN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount" class="control-label"></label>
                <input asp-for="BankAccount" class="form-control" readonly />
                <span asp-validation-for="BankAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Margin" class="control-label"></label>
                <input asp-for="Margin" class="form-control" />
                <span asp-validation-for="Margin" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" name="Edit" value="Edit"
                       formaction="@Url.Action("Edit")" formmethod="post" class="btn btn-primary" />
                @{
                    if (!Model.IsAproved)
                    {
                        <br />
                        <br />
                        <input type="submit" name="Aprove" value="Aprove" class="btn btn-primary"
                           formaction="@Url.Action("Aprove")" formmethod="post" />
                    }
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
