@model IEnumerable<Market.Logic.Models.Order>

@{
    ViewData["Title"] = "List";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @{
                        if (item.State == Market.Logic.Models.OrderState.ProductDeliveryWait)
                        {
                            @Html.ActionLink("Ready", "Ready", new { Id = item.Key.Value })
                        }
                        if (item.State == Market.Logic.Models.OrderState.Ready)
                        {
                            @Html.ActionLink("Receive", "Receive", new { Id = item.Key.Value })
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
