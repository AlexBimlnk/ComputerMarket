@model Market.Models.OrderPayModel

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Orders" asp-action="Pay">
                <h2>Введите платежные данные.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Account" class="form-control" />
                    <label asp-for="Account" class="form-label"></label>
                    <span asp-validation-for="Account" class="text-danger"></span>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Pay</button>
                </div>
            </form>
    </div>
</div>
